import java.io.BufferedReader;
import java.io.FileReader;
import java.util.Arrays;

public class MinMovesToEqual {
    public static void main(String[] args) {
        if (args.length == 0) {
            System.out.println("Need file name");
            return;
        }

        try {
            BufferedReader counter = new BufferedReader(new FileReader(args[0]));
            int count = 0;
            while (counter.readLine() != null) {
                count++;
            }
            counter.close();

            int[] numbers = new int[count];
            
            BufferedReader reader = new BufferedReader(new FileReader(args[0]));
            for (int i = 0; i < count; i++) {
                String line = reader.readLine();
                numbers[i] = Integer.parseInt(line.trim());
            }
            reader.close();

            if (numbers.length == 0) {
                System.out.println(0);
                return;
            }

            Arrays.sort(numbers);
            
            int middle = numbers.length / 2;
            int median = numbers[middle];
            
            int moves = 0;
            for (int i = 0; i < numbers.length; i++) {
                moves += Math.abs(numbers[i] - median);
            }
            
            if (moves <= 20) {
                System.out.println(moves);
            } else {
                System.out.println("20 ходов недостаточно");
            }
            
        } catch (Exception e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
}
